<footer id="footer">
  <div class="outer">
    <div id="footer-info">
      <div class="footer-left">
        <% if (theme.busuanzi && theme.busuanzi.enable){ %>
        <!-- 不蒜子统计 -->
        <span> 本站总访问量<span id="busuanzi_value_site_pv"></span>次 </span>
        <span class="post-meta-divider">|</span>
        <span> 本站访客数<span id="busuanzi_value_site_uv"></span>人 </span>
        <script
          async
          src="//busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"
        ></script>
        <% } %>
      </div>
      <div class="footer-right">
        <!-- <a href="http://hexo.io/" target="_blank">Hexo</a>  Theme <a href="https://github.com/litten/hexo-theme-yilia" target="_blank">Yilia</a> by Litten -->
        &copy; <%= date(new Date(), 'YYYY') %> <%= config.author || config.title
        %>
      </div>
    </div>
  </div>
</footer>

<style>
  /* 隐藏 valine 的 powered by */
  .vpower.txt-right {
    display: none;
  }

  /*回复按钮颜色*/
  #vcomment .vat {
    color: rgb(0, 0, 0);
    font-size: 0.7125rem;
    padding: 0px 0.8rem;
    border-width: 1px;
    border-style: solid;
    border-color: rgb(0, 0, 0);
    border-image: initial;
    border-radius: 5px;
    transition: all 0.3s ease 0s;
  }
  /*提交评论按钮颜色*/
  #vcomment button {
    background-color: rgb(255, 255, 255);
    color: rgb(0, 0, 0);
    font-size: 0.7rem;
    padding: 0.3rem 0.8rem;
    border-color: rgb(0, 0, 0);
    transition: all 0.3s ease 0s;
  }

  /* 评论框美化 */
  #comments .veditor {
    /* min-height: 10rem; */
    background-image: url(https://cdn.statically.io/gh/MarkChenyyds/blogPic@main/test/xiaojinyu.5dshixumhx00.webp);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: right;
    background-color: rgba(255, 255, 255, 0);
    resize: none;
  }

  /*如果你还想修改鼠标移动到【回复】按钮或者【提交】按钮显示的颜色就修改*/

  #vcomment .vat:hover {
    background-color: rgb(0, 0, 0);
    color: rgb(255, 255, 255);
    font-size: 0.7125rem;
    padding: 0px 0.8rem;
    border-width: 1px;
    border-style: solid;
    border-image: initial;
    border-color: rgb(0, 0, 0);
    border-radius: 5px;
    transition: all 0.3s ease 0s;
  }
  /*提交评论按钮变颜色*/
  #vcomment button:hover {
    background-color: rgb(0, 0, 0);
    color: rgb(255, 255, 255);
    font-size: 0.7rem;
    padding: 0.3rem 0.8rem;
    border-color: rgb(255, 255, 255);
    transition: all 0.3s ease 0s;
  }
</style>

